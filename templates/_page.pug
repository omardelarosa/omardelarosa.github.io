extends _layout.pug
include _mixins.pug

block title
  title #{ htmlWebpackPlugin.options.title }

block og
  meta(name='og:url' content="https://omardelarosa.com/pages/" + htmlWebpackPlugin.options.md.meta.slug + ".html")
  meta(name='og:title' content=htmlWebpackPlugin.options.md.meta.title + " | omardelarosa.com")
  meta(name='og:type' content='article')
  meta(name='og:description' content=htmlWebpackPlugin.options.og.description)
block content
  div.breadcrumbs-container
    +breadcrumbs({ text: htmlWebpackPlugin.options.md.meta.slug })
  h1.section-heading.k-inset-2= htmlWebpackPlugin.options.md.meta.title
  div.page-content !{htmlWebpackPlugin.options.md.html}
