#header-container
  position absolute
  top 0
  width 100%
  height $header-container-height

.links__container
  font-family $heading-font-stack
  margin 0 auto
  text-transform lowercase
  padding-top $base-padding
  background-color rgba(0,0,0,0.8)
  text-align left
  color $base-font-color
  +above(0)
    width 100%
  +above('m')
    width 70%

  .links
    font-size $subheading-font-size
    list-style-type none
    display flex
    padding 0 // overrides webkit padding
    +above(0)
      flex-direction column
    +above('m')
      flex-direction row

    &__nav-item
      +above(0)
        display none
        &:first-child
          display inline
      +above('m')
        display inline
      padding $base-padding
      text-align center
      &:first-child
        text-align left
      flex 4 4
      &--anchor
        anchor-tag-style()
