#header-container
  position relative
  top 0
  width 100%
  height $header-container-height
  +above(0)
    background-color #000
  +above('m')
    background-color transparent

.links__container
  font-family $heading-font-stack
  margin 0 auto
  text-transform lowercase
  padding-top $base-padding
  // background-color rgba(0,0,0,0.8)
  text-align left
  color $base-font-color
  +above(0)
    width 100%
  +above('m')
    width 70%

  .links
    font-size $subheading-font-size
    list-style-type none
    display flex
    padding 0 // overrides webkit padding

    &__nav-item
      padding $base-padding
      text-align center
      &:first-child
        text-align left
        +below('m')
          display none
      flex 4 4
      &--anchor
        anchor-tag-style()
      &--anchor--text
        +above(0)
          display none
          &.no-icon
            display inline
        +above('m')
          display inline
      .icon-svg
        svg
          margin -5px 0
          fill $base-font-color
          +above(0)
            height $subheading-font-size * 2
          +above('m')
            display none
