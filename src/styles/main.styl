@import '~normalize.css'
@import '_variables';

anchor-tag-style()
  text-decoration none
  color $base-font-color
  &:visited
    color $base-font-color
  &:hover
    text-decoration underline

body
  background-color $base-font-color-inverse

#root,
#main-container
  width 100vw
  height 100vh - $header-container-height

.svg-grid
  z-index -1
  position absolute
  top 0
  left 0
  opacity 0.3

#content-container
  color $base-font-color
  overflow scroll
  height 100vh - $header-container-height
  +above(0)
    padding 0
    margin $header-container-height 0 0 0
  +above('m')
    width 70%
    margin $header-container-height auto 0 auto

.section-heading
  font-family $heading-font-stack
  text-transform lowercase
  padding $base-padding
  background-color rgba(0,0,0,0.8)
  +above(0)
    margin 0 $base-padding
    width 90%
  +above('m')
    width 100%
    margin 0 auto 0 auto

.breadcrumbs
  margin 0
  padding 0
  +above(0)
    font-size $base-font-size * 0.50
  +above('m')
    font-size $base-font-size
  &__item
    list-style-type none
    display inline
    padding $base-padding
    &:first-child
      padding-left 0
    &--link
      anchor-tag-style()
    &--link
    &--no-link
      &:after
        content '/'
