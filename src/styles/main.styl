@import '~normalize.css'
@import '_variables';

anchor-tag-style()
  text-decoration none
  color $base-font-color
  &:visited
    color $base-font-color
  &:hover
    text-decoration underline

body
  background-color $base-font-color-inverse

#root,
#main-container
  width 100vw
  height 100vh - $header-container-height

.svg-grid
  z-index -1
  position absolute
  top 0
  left 0
  opacity 0.3

#content-container
  color $base-font-color
  overflow scroll
  height 100vh - $header-container-height
  +above(0)
    padding 0
    margin 0 0 0 0
  +above('m')
    width 70%
    margin 0 auto 0 auto

.section-heading
  font-family $heading-font-stack
  text-transform lowercase
  padding $base-padding
  background-color rgba(0,0,0,0.8)
  +above(0)
    margin $base-padding
    width 90%
  +above('m')
    width 100%
    margin 0 auto 0 auto

.breadcrumbs
  margin 0
  padding 0
  +above(0)
    font-size $base-font-size * 0.50
  +above('m')
    font-size $base-font-size
  &__item
    list-style-type none
    display inline
    padding $base-padding
    &:first-child
      padding-left 0
    &--link
      anchor-tag-style()
    &--link
    &--no-link
      &:last-child
        text-overflow clip ellipsis
        text-overflow 'â€¦/'
      &:after
        content '/'

.home-page
  &__container
    width 100%
    height 100%
  &__heading
    font-family $heading-font-stack
    +above(0)
      font-size $heading-font-size * 2
    +above('xl')
      font-size $heading-font-size * 1.5
    text-transform lowercase
    color $base-font-color
    text-align center
    margin 0 auto 0 auto
    +above(0)
      display flex
      flex-direction column
    +above('xl')
      display block
    &--fragment
      +above(0)
        margin 0
        padding 0
        flex 5
        &.is-space
          display none
        &.is-tld
          display inline
      +above('xl')
        &.is-space
          display inline
        &.is-tld
          display none
        flex initial
  &__subheading
    font-size $subheading-font-size
    margin 0 auto 0 auto
    text-transform lowercase
    text-align center
    width 70vw
  &__pusher
    +above(0)
      height 10vh
    +above('xl')
      height 30vh

#header-container
  position relative
  top 0
  width 100%
  height $header-container-height
  +above(0)
    background-color #000
  +above('m')
    background-color transparent

.links__container
  font-family $heading-font-stack
  margin 0 auto
  text-transform lowercase
  padding-top $base-padding
  // background-color rgba(0,0,0,0.8)
  text-align left
  color $base-font-color
  +above(0)
    width 100%
  +above('m')
    width 70%

  .links
    font-size $subheading-font-size
    list-style-type none
    display flex
    padding 0 // overrides webkit padding

    &__nav-item
      padding $base-padding
      text-align center
      &:first-child
        text-align left
        +below('m')
          display none
      flex 4 4
      &--anchor
        anchor-tag-style()
      &--anchor--text
        +above(0)
          display none
          &.no-icon
            display inline
        +above('m')
          display inline
      .icon-svg
        svg
          margin -5px 0
          fill $base-font-color
          +above(0)
            height $subheading-font-size * 2
          +above('m')
            display none
